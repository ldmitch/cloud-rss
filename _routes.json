{
  "version": 1,
  "include": [
    "/*"
  ],
  "exclude": [
    "/assets/*",
    "/images/*",
    "/_astro/*",
    "/favicon.ico"
  ],
  "routes": [
    {
      "pattern": "/articles",
      "script": "functions/articles.ts"
    },
    {
      "pattern": "/refresh_status",
      "script": "functions/refresh_status.ts"
    },
    {
      "pattern": "/article/:id",
      "script": "functions/article/[id].ts"
    },
    {
      "pattern": "/*",
      "serve": "index.html"
    }
  ]
}