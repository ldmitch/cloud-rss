{
  "version": 1,
  "include": ["/*"],
  "exclude": [
    "/assets/*",
    "/images/*",
    "/_astro/*",
    "/favicon.ico"
  ],
  "routes": [
    {
      "pattern": "/articles",
      "script": "functions/articles.ts"
    },
    {
      "pattern": "/article/:id",
      "script": "functions/article/[id].ts"
    },
    {
      "pattern": "/*",
      "serve": "index.html"
    }
  ],
  "scheduled": {
    "refresh-articles": {
      "cron": "*/30 * * * *",
      "retry": {
        "limit": 3
      }
    }
  }
}